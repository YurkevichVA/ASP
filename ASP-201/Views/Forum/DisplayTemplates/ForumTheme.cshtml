@model ASP_201.Models.Forum.ThemeModel4View
<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card my-4">
                <div class="card-header">
                    <div class="media d-flex align-items-center">
                        <img src="@Model.AuthorAvatarUrl" class="d-block ui-w-40 rounded-circle" alt="">
                        <div class="media-body mx-2">
                            <a asp-controller="User" asp-action="Profile" asp-route-id="@Model.AuthorLogin" data-abc="true">@Model.AuthorName</a>
                            <div class="text-muted small">@Model.CreatedDtString</div>
                        </div>
                        <div class="ms-auto text-muted small mx-2">
                            <div>Учасник з <strong>@Model.AuthorRegistrationDtString</strong></div>
                            <div><strong>134</strong> posts</div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p>@Model.Title</p>
                    <p>@Model.Description</p>
                </div>
                <div class="card-footer d-flex flex-wrap justify-content-between align-items-center px-3 pt-0 pb-3">
                    <div class="px-4 pt-3">
                        <span class="g-color-gray-dark-v4"
                              style="margin-left: 3em"
                              data-rating="@Model.IdString" data-rating-value="1" data-rating-given="@(Model.GivenRating == 1? "true" : "false")"
                              role="button">
                            @if (Model.GivenRating == 1)
                            {
                                <i class="bi-hand-thumbs-up-fill"></i>
                            }
                            else
                            {
                                <i class="bi-hand-thumbs-up"></i>
                            }
                            @Model.LikesCount
                        </span>
                        <span class="g-color-gray-dark-v4 mx-3"
                              data-rating="@Model.IdString" data-rating-value="-1" data-rating-given="@(Model.GivenRating == -1? "true" : "false")"
                              role="button">
                            @if (Model.GivenRating == -1)
                            {
                                <i class="bi-hand-thumbs-down-fill"></i>
                            }
                            else
                            {
                                <i class="bi-hand-thumbs-down"></i>
                            }
                            @Model.DislikesCount
                        </span>
                    </div>
                    <div class="px-4 pt-3"> <a asp-action="Theme" asp-route-id="@Model.UrlIdString" class="btn btn-outline-dark">Перейти</a> </div>
                </div>
            </div>
        </div>
    </div>
</div>